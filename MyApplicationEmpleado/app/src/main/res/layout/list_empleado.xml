<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardEmpleado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:dividerPadding="8dp">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Empleado"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                tools:ignore="HardcodedText"/>

            <!-- Nombre -->
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre: Juan Pérez"
                android:textSize="16sp"
                tools:ignore="HardcodedText"/>

            <!-- Salario -->
            <TextView
                android:id="@+id/tvSalario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salario: 3500 Bs."
                android:textSize="16sp"
                tools:ignore="HardcodedText"/>

            <!-- Fecha de Ingreso -->
            <TextView
                android:id="@+id/tvFechaIngreso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de Ingreso: 15/08/2020"
                android:textSize="16sp"
                tools:ignore="HardcodedText"/>

            <!-- Quinquenio -->
            <TextView
                android:id="@+id/tvQuinquenio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quinquenio: 1"
                android:textSize="16sp"
                tools:ignore="HardcodedText"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
